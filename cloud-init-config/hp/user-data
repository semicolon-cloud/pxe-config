#cloud-config
autoinstall:
    version: 1
    reporting:
        hook:
            type: webhook
            endpoint: http://10.5.0.1:9000/hook
    early-commands:
        - ping -c1 10.5.0.1
        - curl 10.5.0.1:9000/allocIp --fail-with-body -i
        - sDevice=`ls /sys/class/net/ | grep -v "lo" | head -1`; sed -i "s/#MAC/$(cat /sys/class/net/$sDevice/address | sed -e "s/://g")/g" /autoinstall.yaml
        - sed -i "s/#SUBIP/$(curl 10.5.0.1:9000/allocIp --fail-with-body -s)/g" /autoinstall.yaml
        - sed -i "s/#UNAME/$(uname -r)/g" /autoinstall.yaml
        - sDevice=`ls /sys/class/net/ | grep -v "lo" | head -1`; sed -i "s/DEVICE#/$sDevice/g" /autoinstall.yaml
        - hostnamectl set-hostname installation
    locale: en_US
    network:
        network:
            version: 2
            ethernets:
                DEVICE#:
                    dhcp4: true
            vlans:
                vlan10:
                    id: 10
                    link: DEVICE#
                vlan30:
                    id: 30
                    link: DEVICE#
                vlan20:
                    id: 20
                    link: DEVICE#
                vlan100:
                    id: 100
                    link: eno1
                vlan110:
                    id: 110
                    link: eno1
            bridges:
                br-mgmt:
                    interfaces:
                    - vlan10
                    addresses: [172.29.236.#SUBIP/22]
                br-vxlan:
                    interfaces:
                    - vlan30
                    addresses: [172.29.240.#SUBIP/22]
                br-storage:
                    interfaces:
                    - vlan20
                    addresses: [172.29.244.#SUBIP/22]
                br-vlan:
                    interfaces:
                    - vlan110
                br-vlan2:
                    interfaces:
                    - vlan100
    storage:
        grub:
            reorder-uefi: false
        config:
        # disk
        -   type: disk
            id: disk-hdd
            path: /dev/sda
            preserve: false
            grub_device: false
            wipe: superblock-recursive
            ptable: gpt
        -   type: disk
            id: disk-ssd-1
            path: /dev/sdb
            preserve: false
            grub_device: true
            wipe: superblock-recursive
            ptable: gpt
        -   type: disk
            id: disk-ssd-2
            path: /dev/sdc
            preserve: false
            grub_device: false
            wipe: superblock-recursive
            ptable: gpt
        # partition
        -   type: partition
            id: disk-ssd-1-part0
            device: disk-ssd-1
            preserve: false
            flag: bios_grub
            size: 100MB
        -   type: partition
            id: disk-ssd-1-part1
            preserve: false
            device: disk-ssd-1
            size: -1
        -   type: partition
            id: disk-hdd-part0
            size: -1
            preserve: false
            device: disk-hdd
        -   type: partition
            preserve: false
            id: disk-ssd-2-part0
            size: -1
            device: disk-ssd-2
        # volume group
        -   type: lvm_volgroup
            id: vg1
            name: cinder-volumes
            preserve: false
            devices:
            -  disk-hdd-part0
        -   type: lvm_volgroup
            id: vg2
            preserve: false
            name: ssd-lvm
            devices:
            -   disk-ssd-2-part0
        # format and mount
        -   type: format
            id: disk-ssd-1-part1-fs
            fstype: ext4
            label: root
            volume: disk-ssd-1-part1
        -   id: lvm_part0-fs-mount0
            type: mount
            path: /
            device:  disk-ssd-1-part1-fs
    ssh:
        install-server: yes
        allow-pw: false
    packages:
        - bridge-utils
        - debootstrap
        - openssh-server
        - tcpdump
        - vlan
        - python3
        - linux-modules-extra-#UNAME
    user-data:
        disable_root: false
        hostname: inst-#MAC
        users:
        -   name: worker
            passwd: $1$2YJDidZr$2VaE6y8XZLlqRIxwX2wmy0
            ssh_authorized_keys:
            - ssh-rsa  semicolon@semicolon-master.semicolon.local
            shell: /bin/bash
            lock_passwd: false
            groups: [adm, sudo]
            sudo: ALL=(ALL) ALL
        -   name: root
            lock_passwd: true
            ssh_authorized_keys:
            - ssh-rsa  root@semicolon-master.semicolon.local
            shell: /bin/bash
            groups: [adm, sudo]
            sudo: ALL=(ALL) ALL
    late-commands:
        - sed -ie 's/GRUB_TIMEOUT=.\*/GRUB_TIMEOUT=30/' /target/etc/default/grub
    error-commands:
        - tar c /var/log/installer | nc 10.5.0.1 1000
        # Clear grub mbr
        - dd if=/dev/zero of=/dev/sda bs=512 count=1
        # - vgremove -y cinder-volumes
        - vgremove -y cinder-volumes
        - vgremove -y ssd-lvm
        - wipefs -a /dev/sda
        - wipefs -a /dev/sdb
        - wipefs -a /dev/sdc 
# set password to r00tme
chpasswd:
    expire: false
    list:
        - installer:$1$2YJDidZr$2VaE6y8XZLlqRIxwX2wmy0
